{
  "name": "@manta-templates/ui-core",
  "version": "0.1.0",
  "description": "Framework-agnostic UI components for manta-templates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:css && tsc && cp -r src/styles dist/styles",
    "build:css": "tailwindcss --input src/styles/index.css --output dist/styles/index.css",
    "dev": "tsc --watch", 
    "clean": "rimraf dist",
    "test": "tsx src/__tests__/content.test.ts",
    "test:watch": "tsx watch src/__tests__/content.test.ts"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.507.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.170.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3"
  }
}