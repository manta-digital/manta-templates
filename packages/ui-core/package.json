{
  "name": "@manta-templates/ui-core",
  "version": "0.8.0",
  "description": "Framework-agnostic UI components for manta-templates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:css && tsc && cp -r src/styles dist/styles",
    "build:css": "tailwindcss --input src/styles/index.css --output dist/styles/index.css",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:legacy": "tsx src/__tests__/content.test.ts && tsx src/__tests__/header.test.ts",
    "test:legacy:watch": "tsx watch src/__tests__/content.test.ts",
    "test:header": "tsx src/__tests__/header.test.ts",
    "test:header:watch": "tsx watch src/__tests__/header.test.ts",
    "test:baseline": "tsx src/__tests__/run-baseline-tests.ts",
    "test:neutral-colors": "tsx src/__tests__/styles/neutral-colors-baseline.test.ts && tsx src/__tests__/styles/neutral-colors-mapping.test.ts && tsx src/__tests__/styles/theme-neutral-cascade.test.ts",
    "test:visual-regression": "tsx src/__tests__/visual/neutral-colors-regression.test.ts",
    "test:build": "tsx src/__tests__/build/css-compilation.test.ts",
    "test:integration": "tsx src/__tests__/integration/color-cascade-resolution.test.ts",
    "test:all-colors": "npm run test:neutral-colors && npm run test:visual-regression && npm run test:build && npm run test:integration",
    "test:validate-migration": "npm run test:baseline && npm run test:all-colors"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.507.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "three": "^0.170.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.5",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.170.0",
    "jsdom": "^25.0.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
