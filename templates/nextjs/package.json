{
  "name": "manta-template-next",
  "version": "0.8.0",
  "private": false,
  "description": "Opinionated Next 15 + Tailwind 4 + ShadCN starter with masonry & bento grids",
  "author": "Erik Corkran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/manta-digital/manta-templates",
    "directory": "nextjs"
  },
  "homepage": "https://github.com/manta-digital/manta-templates/tree/main/nextjs",
  "bugs": {
    "url": "https://github.com/manta-digital/manta-templates/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "setup-guides": "bash scripts/setup-guides.sh",
    "setup-guides:private": "bash scripts/setup-guides.sh && bash scripts/setup-guides-private.sh",
    "update-guides": "bash scripts/update-guides.sh",
    "guides": "pnpm setup-guides",
    "ai-assisted-build": "pnpm ai-typecheck && pnpm lint && pnpm format:check && pnpm build",
    "ai-typecheck": "tsc --noEmit --skipLibCheck",
    "ai-lint": "eslint . --ext .ts,.tsx --fix",
    "ai-format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:server-components": "jest --testPathPattern=server-component",
    "build-ui": "cd ../../packages/ui-core && pnpm build && cd ../../templates/nextjs && pnpm build",
    "dev-ui": "cd ../../packages/ui-core && pnpm build && cd ../../templates/nextjs && pnpm dev"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.507.0",
    "next": "15.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.1",
    "react-player": "^2.16.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^3.3.1",
    "three": "^0.176.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@types/three": "^0.176.0",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.4.7",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "rehype-pretty-code": "^0.14.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-rehype": "^11.1.2",
    "shiki": "3.7.0",
    "tailwindcss": "^4.1.10",
    "ts-jest": "^29.4.1",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.9.2"
  }
}
